@model Skillr.Models.Skills

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Skills</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Skill" class="control-label"></label>
                <input asp-for="Skill" class="form-control" />
                <span asp-validation-for="Skill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkillLevel" class="control-label"></label>
                <input asp-for="SkillLevel" class="form-control" />
                <span asp-validation-for="SkillLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Certificate" /> @Html.DisplayNameFor(model => model.Certificate)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CertificateValidFrom" class="control-label"></label>
                <input asp-for="CertificateValidFrom" class="form-control" />
                <span asp-validation-for="CertificateValidFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CertificateValidUntil" class="control-label"></label>
                <input asp-for="CertificateValidUntil" class="form-control" />
                <span asp-validation-for="CertificateValidUntil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearsExperience" class="control-label"></label>
                <input asp-for="YearsExperience" class="form-control" />
                <span asp-validation-for="YearsExperience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
